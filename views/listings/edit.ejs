<% layout("/layouts/boilerplate") %>
<body>
    <h3>Edit your information</h3>
    <div class="row ">
      <div class=" offset-4  col-md-4 ">
    <form method="POST" action="/listings/<%= listing._id  %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
      <div class="mb-2">
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]" class="form-control" value="<%= listing.title  %>" type="text" required />
        </div>
        <div class="mb-2">
          <label for="discription" class="form-label">Discription</label>
        <textarea
          name="listing[description]"
          class="form-control"
          required
        ><%= listing.description  %></textarea>
        </div>

        <div class="mb-2">
          <label for="imgage" class="form-label">Image</label>
        <input
          name="listing[image]"
          value="<%= listing.image  %>"
          type="file"
          class="form-control"
          required
        />
        </div>

        <div class="mb-2">
          <label for="price" class="form-label">Price</label>
        <input name="listing[price]" class="form-control" value="<%= listing.price  %>" type="number" required/>
        </div>
        <div class="mb-2">
          <label for="country" class="form-label">Country</label>
        <input name="listing[country]" class="form-control" value="<%= listing.country  %>" type="text" required />
        </div>
        <div class="mb-2">
          <label for="location" class="form-label">Location</label>
        <input
          name="listing[location]"
          value="<%= listing.location  %>"
          type="text"
          class="form-control"
          required
          />
        </div>
        <button class="btn btn-dark edit-btn">update</button>
      </form>
      </div>
      </div>
      
</body>
